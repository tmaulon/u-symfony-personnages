{% extends 'base.html.twig' %}
{% block title %}
	Liste des personnages
{% endblock %}

{% block monTitre %}
	Liste des personnages
{% endblock %}

{% block body %}
	<table class="table">
		<tr>
			<th>Image</th>
			<th>Nom</th>
			<th>Age</th>
			<th>Sexe</th>
			<th>Force</th>
			<th>Agilit√©</th>
			<th>Intelligence</th>
		</tr>

		{% for player in players %}
			<tr>
				<td>
					<img src="{{ asset('images/personnages/' ~ player.nom ~'.png') }}" alt="Illustration personnage">
				</td>
				<td>
					<a href="{{ path('afficher_personnage', {'nom': player.nom|lower}) }}">
						{{ player.nom }}
					</a>
				</td>1
				<td>{{ player.age }}</td>
				<td>
					{% if player.sexe %}
						Home
					{% else %}
						Femme
					{% endif %}
				</td>
				<td>{{ player.carac.force }}</td>
				<td>{{ player.carac.agi }}</td>
				<td>{{ player.carac.intel }}</td>
			</tr>
		{% endfor %}


	</table>
{% endblock %}
